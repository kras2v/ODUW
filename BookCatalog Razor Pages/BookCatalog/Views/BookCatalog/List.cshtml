@model System.Collections.Generic.List<BookCatalog.Models.Book>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <h1 class="mb-4 text-center">Book Catalog</h1>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Year</th>
                    <th>Genre</th>
                    <th>Price</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="GetBook" asp-controller="BookCatalog" asp-route-id="@item.Id" role="button" class="btn btn-outline-primary btn-sm me-2">
                                @item.Id
                            </a>
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.PublicationYear</td>
                        <td>@item.Genre</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            <div class="d-flex justify-content-md-between">
                                <a asp-action="UpdateBook" asp-controller="BookCatalog" asp-route-id="@item.Id" role="button" class="btn btn-outline-primary btn-sm me-2">
                                    Edit
                                </a>
                                <form asp-action="DeleteBook" asp-controller="BookCatalog" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center mb-4">
            <a asp-action="CreateBook" asp-controller="BookCatalog" class="btn btn-success btn-lg">
                Create
            </a>
        </div>
    </div>
</div>
