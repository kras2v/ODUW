@model BookCatalog.Models.Book

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center">Book Details</h1>
<hr class="mb-4" />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="UpdateBook" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input disabled asp-for="Title" class="form-control" />
                <label asp-for="Title">Title</label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea disabled asp-for="Description" class="form-control" style="height: 150px; padding: 7% 2%; resize: none;"></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input disabled asp-for="Author" class="form-control" />
                <label asp-for="Author">Author</label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input disabled asp-for="PublicationYear" class="form-control"/>
                <label asp-for="PublicationYear">Publication Year</label>
                <span asp-validation-for="PublicationYear" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input disabled asp-for="Genre" class="form-control" />
                <label asp-for="Genre">Genre</label>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input disabled asp-for="Price" class="form-control"/>
                <label asp-for="Price">Price</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center">
                <a asp-action="GetAllBooks" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
